<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <h1>{{title}}</h1>
    </h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{description}}
    </p>
  </div>
</div>

{{#each comments as |comment| }}
<div>
  <p>{{comment.body}}</p>
</div>
{{/each}}
